<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<File name="LogToFile" fileName="logs/restful-api.log">
			<PatternLayout
				pattern="%d{HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
		</File>
	</Appenders>
	<Loggers>
		<Root level="all">
			<AppenderRef ref="LogToFile" />
		</Root>
	</Loggers>
</Configuration>
	